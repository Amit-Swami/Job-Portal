<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="100dp"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="20dp"
            android:id="@+id/edttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title of the job"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtcompname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company name"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtexp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Experience required (0-2 years)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location of company"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtskills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skills required"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtvacancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vacancies"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtwalkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Walk-in Time(9am),date(dd-mm-yyyy) and venue address"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:scrollbars="horizontal"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtsalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary(INR 3,00,000-6,00,000)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtjobdescript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job description"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtindustrytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Industry type ex:IT-Software,BPO,Hospital"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtfuncarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Functional area ex:Programming,Maintenance,Healthcare,Biotechnology"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            android:scrollbars="horizontal"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtjobrole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job role"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtemptype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employment type (Permanent-Full time/Part time)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtdesiredcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Required candidate profile"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtcompwebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company website"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtcompdescript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About the company"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edthrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HR/Recruiter name"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edthrcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HR/Recruiter contact"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/Denim"
            android:inputType="text"
            android:textSize="16sp"
            app:met_singleLineEllipsis="true"
            />

        <LinearLayout
            android:layout_marginBottom="35dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <info.hoang8f.widget.FButton
                android:id="@+id/btnSelect"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Select"
                android:layout_margin="8dp"
                app:fButtonColor="#ffffff"
                android:textColor="@color/Blue"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"
                />
            <info.hoang8f.widget.FButton
                android:id="@+id/btnUpload"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Upload"
                android:layout_margin="8dp"
                app:fButtonColor="@color/Blue"
                android:textColor="#ffffff"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"
                />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>